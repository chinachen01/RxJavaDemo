<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/button_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="onClick"
        android:text="just"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_from"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <Button
        android:id="@+id/button_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="108dp"
        android:onClick="onClick"
        android:text="from"
        app:layout_constraintLeft_toRightOf="@+id/button_just"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/button_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:onClick="onClick"
        android:text="range"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_from"
        app:layout_constraintLeft_toRightOf="@+id/button_from"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <Button
        android:id="@+id/button_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:onClick="onClick"
        android:text="interval"
        app:layout_constraintLeft_toRightOf="@+id/button_create"
        app:layout_constraintTop_toTopOf="@+id/button_timer"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/button_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:text="timer"
        app:layout_constraintLeft_toLeftOf="@+id/button_range"
        app:layout_constraintRight_toRightOf="@+id/button_range"
        app:layout_constraintTop_toBottomOf="@+id/button_range"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="create"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_interval"
        app:layout_constraintLeft_toLeftOf="@+id/button_just"
        app:layout_constraintRight_toRightOf="@+id/button_just"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"/>

    <Button
        android:id="@+id/button_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:text="empty"
        app:layout_constraintLeft_toLeftOf="@+id/button_create"
        app:layout_constraintRight_toRightOf="@+id/button_create"
        app:layout_constraintTop_toBottomOf="@+id/button_create"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <Button
        android:id="@+id/button_defer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:onClick="onClick"
        android:text="defer"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_empty"
        app:layout_constraintLeft_toRightOf="@+id/button_empty"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"/>
</android.support.constraint.ConstraintLayout>